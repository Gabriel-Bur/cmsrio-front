@model Web.Models.AvaliacaoViewModel


<div id="page-container" class="sidebar-mini sidebar-o side-scroll header-navbar-fixed">


    <!-- Header -->
    <header id="header-navbar" class="content-mini content-mini-full">


        <!-- Header Navigation Left -->
        <ul class="nav-header pull-left">
            <li>
                <!-- Opens the Apps modal found at the bottom of the page, before including JS code -->
                <button class="btn btn-default pull-right" data-toggle="modal" data-target="#apps-modal" type="button">
                    <i class="fa fa-navicon fa-2x"></i>
                </button>
            </li>
        </ul>

        <ul class="nav nav-header pull-right">
            <li>
                <h3>CMSRIO</h3>
            </li>

        </ul>
        <!-- END Header Navigation Left -->





    </header>


    <!-- END Header -->
    <!--Modal header-->
    <div class="modal fade" id="apps-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-sm modal-dialog modal-dialog-top">
            <div class="modal-content">
                <!-- Apps Block -->
                <div class="block block-themed block-transparent">
                    <div class="block-header bg-primary-dark">
                        <ul class="block-options">
                            <li>
                                <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                            </li>
                        </ul>
                        <h3 class="block-title">Menu</h3>
                    </div>
                    <div class="block-content">
                        <div class="row text-center">
                            <div class="col-xs-6">
                                <a class="block block-rounded" href="@Url.Action("Index", "Home")">
                                    <div class="block-content text-white bg-default">
                                        <i class="fa fa-heartbeat fa-3x"></i>
                                        <div class="font-w600 push-15-t push-15">Inicio</div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-xs-6">
                                <a class="block block-rounded" href="@Url.Action("Contato", "Home")">
                                    <div class="block-content text-white bg-modern">
                                        <i class="si si-earphones-alt fa-3x"></i>
                                        <div class="font-w600 push-15-t push-15">Contato</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END Apps Block -->
            </div>
        </div>
    </div>
    <!--Modal header-->
    <!--About us Content start-->

    <main id="main-container">
        <div class="bg-white">
            <section class="content content-full content-boxed">
                <!-- Section Content -->
                <div class="row push-20-t push-20">
                    <div class="col-sm-8 col-sm-offset-2">

                        <!-- Introduction -->
                        <h2 class="h3 font-w600 push-30-t push">Deixe sua opnião aqui</h2>

                        <div class="panel panel-default">
                            <div class="block">
                                <div class="block-header bg-gray-lighter">
                                    <h3 class="block-title"></h3>
                                </div>


                                <div class="block-content block-content-full">

                                    <div class="block">

                                        <div class="block-content block-content-narrow">
                                            @using (Html.BeginForm("Create", "Avaliacao", FormMethod.Post, new { @class = "form-horizontal push-10-t" }))
                                            {
                                                @Html.AntiForgeryToken()

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group hidden">
                                                    <div class="col-sm-12">
                                                        <div class="form-material">
                                                            @Html.LabelFor(model => model.IDHospital, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.IDHospital, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite seu nome completo" } })
                                                            @Html.ValidationMessageFor(model => model.IDHospital, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <div class="form-material">
                                                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite seu nome completo" } })
                                                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <div class="form-material">

                                                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite seu email" } })
                                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <div class="form-material">
                                                            @Html.LabelFor(model => model.Assunto, htmlAttributes: new { @class = "control-label" })

                                                            @Html.DropDownListFor(model => model.Assunto, new List<SelectListItem>
                                                                {
                                                                        new SelectListItem() {Text = "", Value = "", Selected=true },
                                                                        new SelectListItem() {Text = "Consultas individuais e coletivas", Value="Consultas individuais e coletivas" },
                                                                        new SelectListItem() {Text = "Visita domiciliar", Value="Visita domiciliar" },
                                                                        new SelectListItem() {Text = "Saúde Bucal", Value="Saúde Bucal" },
                                                                        new SelectListItem() {Text = "Vacinação", Value="Vacinação" },
                                                                        new SelectListItem() {Text = "Pré-natal", Value="Pré-natal" },
                                                                        new SelectListItem() {Text = "Exames de raios-x", Value="Exames de raios-x" },
                                                                        new SelectListItem() {Text = "Eletrocardiograma", Value="Eletrocardiograma" },
                                                                        new SelectListItem() {Text = "Exames laboratoriais: sangue, urina e fezes", Value="Exames laboratoriais: sangue, urina e fezes" },
                                                                        new SelectListItem() {Text = "Ultrassonografia", Value="Ultrassonografia" },
                                                                        new SelectListItem() {Text = "Curativos", Value="Curativos" },
                                                                        new SelectListItem() {Text = "Vigilância em saúde", Value="Vigilância em saúde" },
                                                                        new SelectListItem() {Text = "Teste do pezinho", Value="Teste do pezinho" },
                                                                        new SelectListItem() {Text = "Tratamento e acompanhamento de pacientes diabéticos e hipertensos", Value="Tratamento e acompanhamento de pacientes diabéticos e hipertensos" }
                                                                },
                                                                        new {@class= "js-select2 form-control select2-hidden-accessible" }
                                                                )

                                                            @Html.ValidationMessageFor(model => model.Assunto, "", new { @class = "text-danger" })

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <div class="form-material">


                                                            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label" })
                                                            @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control", @rows = "5" })
                                                            @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })


                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-sm-9">
                                                        <div>
                                                            <label><a data-toggle="modal" data-target="#modal-terms" href="#">Terms</a> <span class="text-danger">*</span></label>
                                                        </div>
                                                        <label class="css-input css-checkbox css-checkbox-primary" for="val-terms2">
                                                            <input type="checkbox" id="val-terms2" name="val-terms2" value="1"><span></span> Eu concordo com os termos
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-xs-12">
                                                        <button class="btn btn-rounded btn-success" type="submit">Enviar</button>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- END Section Content -->
            </section>
        </div>
    </main>


    <!--About us Content end-->

</div>

