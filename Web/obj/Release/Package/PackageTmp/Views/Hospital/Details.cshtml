@model Tuple<Web.Models.HospitalViewModel, List<Web.Models.AvaliacaoViewModel>>


<div id="page-container" class="sidebar-mini sidebar-o side-scroll header-navbar-fixed">


    <!-- Header -->
    <header id="header-navbar" class="content-mini content-mini-full">


        <!-- Header Navigation Left -->
        <ul class="nav-header pull-left">
            <li>
                <!-- Opens the Apps modal found at the bottom of the page, before including JS code -->
                <button class="btn btn-default pull-right" data-toggle="modal" data-target="#apps-modal" type="button">
                    <i class="fa fa-navicon"></i>
                </button>
            </li>
        </ul>

        <ul class="nav nav-header pull-right">
            <li>
                <h4>CMSRIO</h4>
            </li>

        </ul>
        <!-- END Header Navigation Left -->





    </header>


    <!-- END Header -->
    <!--Modal header-->
    <div class="modal fade" id="apps-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-sm modal-dialog modal-dialog-top">
            <div class="modal-content">
                <!-- Apps Block -->
                <div class="block block-themed block-transparent">
                    <div class="block-header bg-primary-dark">
                        <ul class="block-options">
                            <li>
                                <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                            </li>
                        </ul>
                        <h3 class="block-title">Menu</h3>
                    </div>
                    <div class="block-content">
                        <div class="row text-center">
                            <div class="col-xs-6">
                                <a class="block block-rounded" href="@Url.Action("Index", "Home")">
                                    <div class="block-content text-white bg-default">
                                        <i class="fa fa-heartbeat fa-3x"></i>
                                        <div class="font-w600 push-15-t push-15">Inicio</div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-xs-6">
                                <a class="block block-rounded" href="@Url.Action("Contato", "Home")">
                                    <div class="block-content text-white bg-modern">
                                        <i class="si si-earphones-alt fa-3x"></i>
                                        <div class="font-w600 push-15-t push-15">Contato</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END Apps Block -->
            </div>
        </div>
    </div>
    <!--Modal header-->
    <!--About us Content start-->

    <main id="main-container">
        <div class="bg-white">
            <section class="content content-full content-boxed">
                <!-- Section Content -->
                <div class="row push-20-t push-20">
                    <div class="col-sm-8 col-sm-offset-2">

                        <!-- Introduction -->
                        <h2 class="h3 font-w600 push-30-t push">Detalhes</h2>

                        <div class="panel panel-default">
                            <div class="block">
                                <div class="block-header bg-gray-lighter">
                                    <h3 class="block-title"></h3>
                                </div>


                                <div class="block-content block-content-full">
                                    <div class="h4 push-5">@Html.DisplayFor(model => model.Item1.Nome)</div>
                                    <address>

                                        <p>
                                            Funcionamento:
                                            Segunda a Sexta das @Html.DisplayFor(model => model.Item1.Hora1)h às @Html.DisplayFor(model => model.Item1.Hora2)h
                                            @if (Model.Item1.HoraF1.Equals("0"))
                                            {

                                            }
                                            else
                                            {
                                                <text> - Sábado das</text> @Html.DisplayFor(model => model.Item1.HoraF1)<text>h às</text> @Html.DisplayFor(model => model.Item1.HoraF2)<text>h</text>
                                            }
                                        </p>

                                        @Html.DisplayFor(model => model.Item1.Logradouro), @Html.DisplayFor(model => model.Item1.Numero)<br />
                                        @Html.DisplayFor(model => model.Item1.Bairro)<br />
                                        Complemento: @Html.DisplayFor(model => model.Item1.Complemento)<br /><br />

                                        <p>
                                            <i class="fa fa-phone"></i> @Html.DisplayFor(model => model.Item1.Telefone)<br />
                                            <i class="fa fa-envelope-o"></i> <a href="javascript:void(0)">@Html.DisplayFor(model => model.Item1.Email)</a><br />
                                            <i class="fa fa-globe"></i> <a href="javascript:void(0)">@Html.DisplayFor(model => model.Item1.Site)</a>
                                        </p>
                                    </address>

                                    <hr />
                                    <button class="btn btn-minw btn-rounded btn-primary center-block" onclick="location.href='@Url.Action("Create", "Avaliacao", new {id = Model.Item1.IDHospital})'">Deixar opnião</button>

                                    <!--foreach aqui-->

                                    @foreach (var avaliacao in Model.Item2)
                                    {
                                        <hr />
                                        <table class="table table-striped table-borderless">
                                            <tbody>

                                                <!--Autor do comentario e Data-->
                                                <tr>
                                                    <td class="font-s13 text-muted">
                                                        <a href="#">@avaliacao.Nome</a> em @avaliacao.Data
                                                    </td>
                                                </tr>

                                                <!--Tópico do comentário-->
                                                <tr>
                                                    <td>
                                                        <h4>@avaliacao.Assunto</h4>
                                                    </td>
                                                </tr>



                                                <!--Comentário-->
                                                <tr>
                                                    <td>
                                                        <p>@avaliacao.Comentario</p>
                                                        
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    }

                                </div>

                            </div>
                        </div>



                    </div>
                </div>
                <!-- END Section Content -->
            </section>
        </div>
    </main>


    <!--About us Content end-->


</div>